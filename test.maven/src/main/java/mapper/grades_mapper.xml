<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.Grades_Dao">		<!-- xml与接口dao关联 -->

	<!-- id为方法名 -->
	
	<!--查询全部 -->
	<select id="select" resultType="entity.Grades" parameterType="java.lang.String">
		select * from grades ${where}
	</select>	

	<!-- 查询单个 -->
	<select id="selectById" resultType="entity.Grades"
		parameterType="int">
		select * from grades where id=#{id}
	</select>

	<!-- 新增 -->
	<insert id="insert" parameterType="entity.Grades">
		insert into grades (name) values(#{name})
	</insert>

	<!-- 修改 -->
	<insert id="update" parameterType="entity.Grades">
		update grades set name=#{name} where id=#{id}
	</insert>

	<!-- 删除 -->
	<insert id="delete" parameterType="int">
		delete from grades where id=#{id}
	</insert>


</mapper>